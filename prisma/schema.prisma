
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  fulfilled
  shipped
  awaiting_shipment
}

enum PhoneModel {
  iphonex
  iphone11
  iphone12
  iphone13
  iphone14
  iphone15
  iphone16
}

enum CaseColor {
  black
  red
  rose
  blue
}

enum CaseMaterial {
  silicone
  polycarbonate
}

enum CaseFinish {
  smooth
  textured
}

model Configuration {
  id String @id @default(cuid())
  width Int
  height Int
  imageUrl String
  color CaseColor?
  model PhoneModel?
  material CaseMaterial?
  finish CaseFinish?
  croppedImageUrl String?
}